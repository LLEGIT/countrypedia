---
import CountryFlag from "../atoms/CountryFlag.astro";
import CountryImage from "../atoms/CountryImage.astro";
const { name, code } = Astro.props;
---

<div class="p-2 w-[48%] flex flex-col gap-y-4 items-center lg:w-fit">
    <div class="p-2 border-b-2 border-b-black">
        <h3 class="text-center">{name}</h3>
    </div>
    <div class="shadow p-2">
        <CountryFlag name={name} code={code} />
        <CountryImage name={name} code={code} />
    </div>
</div>
